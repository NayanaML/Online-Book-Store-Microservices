package in.onlinebookstore.serviceImple;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;

import in.onlinebookstore.entity.Book;
import in.onlinebookstore.repo.BookCatalogRepo;
import in.onlinebookstore.service.BookCatalogService;

public class BookCatalogImple implements BookCatalogService {
	@Autowired
	private BookCatalogRepo bookrepo;

	@Override
	public List<Book> bookslist() {

		return bookrepo.findAll();
	}

	@Override
	public Book addBook(Book book) {
		if (book != null) {
			Book savedbook = bookrepo.save(book);
			return savedbook;

		}
		return null;
	}

	@Override
	public String removeBook(String id) {
		Optional<Book> book = bookrepo.findById(id);
		
		if (book.isEmpty()){
			return "No book FOund";
		}else {
			bookrepo.deleteById(id);
			return "Book Deleted";
		}
		
	}

	@Override
	public Book updateBook(Book book) {

		Optional<Book> bk = bookrepo.findById(book.getId());
		Book returnedBook = bk.get();
		
		if (returnedBook == null){
			return null;
		}
			else {
				returnedBook.setAuthor(book.getAuthor());
				returnedBook.setCategory(book.getCategory());
				returnedBook.setPrice(book.getPrice());
				returnedBook.setTitle(book.getTitle());
				bookrepo.save(returnedBook);
			}
		return null;
	}

}
