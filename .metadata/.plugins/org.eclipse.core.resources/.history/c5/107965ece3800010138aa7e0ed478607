	@Override
	public Book addBook(Book book) {
		if (book != null) {
			Book savedbook = bookrepo.save(book);
			return savedbook;

		}
		return null;
	}

	@Override
	public String removeBook(String id) {
		Optional<Book> = bookrepo.findById(id);
		return null;
	}

